[flake8]
max-line-length = 100
extend-ignore = 
    # Allow unused imports in __init__.py files
    F401
    # Allow line too long (black formatter handles this)
    E501
    # Allow function is too complex (we want readable code)
    C901
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .coverage
per-file-ignores =
    __init__.py:F401
    tests/*:S101,S106
